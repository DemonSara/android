<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:background="@mipmap/orderbag"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/img_back_OrderDetailsActivity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:src="@drawable/img_back_write" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="130dp"
                android:text="订单详情"
                android:textColor="@color/white"
                android:textSize="17dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="-80dp"
        android:background="@drawable/bag"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="14dp"
                android:src="@mipmap/heads" />

            <TextView
                android:id="@+id/tv_name_OrderDetailsActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="时代"
                android:textColor="#333333"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_phone_OrderDetailsActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15032351246"
                android:textColor="#333333"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="14dp"
                android:src="@mipmap/address" />

            <TextView
                android:id="@+id/tv_address_OrderDetailsActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="河北省 石家庄市 桥西区 西小路164号 默默小区5单元405"
                android:textColor="#333333"
                android:textSize="13dp" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_OrderDetailsActivity"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher"/>
                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_shopname_OrderDetailsActivity"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:lines="2"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#333333"
                            android:text="非煮不可（Fitcooker）双胆智能电饭煲9L家用预约多功能..."
                            android:maxLines="2"
                            android:ellipsize="end"/>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_prices_OrderDetailsActivity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="16dp"
                                android:textColor="#EA3C3C"
                                android:text="￥1299.90"/>
                            <TextView
                                android:id="@+id/tv_number_OrderDetailsActivity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#999999"
                                android:textSize="14dp"
                                android:text="x1"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#e5e5e5" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tv_OrderNumber_OrderDetailsActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="订单编号：77863031542"
                    android:textColor="#333333"
                    android:textSize="13dp" />



                <TextView
                    android:id="@+id/tv_payType_OrderDetailsActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="支付方式:   线上支付"
                    android:textColor="#333333"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品总额"
                        android:textColor="#333333"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_TotalPrice_OrderDetailsActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="￥1299.90"
                        android:textColor="#333333"
                        android:textSize="13dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e5e5e5"
                    android:layout_marginTop="15dp"/>
                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="12dp"
                        android:text="需付款:"/>
                    <TextView
                        android:id="@+id/tv_price_OrderDetailsActivity"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#EA3C3C"
                        android:textSize="17dp"
                        android:text="￥1229.90"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/linear_OrderDetailsActivity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="right"
        android:paddingRight="15dp">
        <TextView
            android:id="@+id/tv_cancel_OrderDetailsActivity"
            android:textSize="15dp"
            android:text="取消订单"
            android:textColor="@color/colorDefaultRed"
            android:background="@drawable/tv_bag4dp_red"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_payment_OrderDetailsActivity"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:text="立即付款"
            android:textColor="@color/white"
            android:background="@drawable/tv_bag4dp_red1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>