<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f3f9"
    tools:context=".activity.fragment.MyFragment">
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:background="@mipmap/mybag"
    android:layout_weight="2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="亲爱的"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/fragment_my_username"
        android:textSize="30sp"
        android:text="用户名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="15sp"
        android:text="您好"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:id="@+id/my_quanbudingdan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的订单"
                android:textColor="#5d5d5d" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="查看全部订单"
                android:textColor="#5d5d5d" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_shouhuodizhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的地址"
                android:textColor="#5d5d5d" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="查看管理收货地址"
                android:textColor="#5d5d5d" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_xiugaiyonhumima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码管理"
                android:textColor="#5d5d5d" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="修改我的密码"
                android:textColor="#5d5d5d" />
        </RelativeLayout>

        <Button
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="55dip"
            android:layout_marginRight="55dip"
            android:id="@+id/bt_my_go_loginActivity"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:background="@drawable/button_click_selector_green"
            android:text="退出登录"
            android:textColor="#ffffff"
            android:textSize="18sp" />


    </LinearLayout>
</LinearLayout>