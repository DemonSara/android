<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_MyOrderFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:background="@drawable/bag"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_Status_MyOrderFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="删除订单"
            android:textColor="#666666"
            android:textSize="13dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_check_bill"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="@mipmap/share"/>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_shopname_myorderfragment"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:lines="2"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#333333"
                android:text="非煮不可（Fitcooker）双胆智能电饭煲9L家用预约多功能..."
                android:maxLines="2"
                android:ellipsize="end"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_price_myorderfragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:textColor="#EA3C3C"
                    android:text="￥1299.90"/>
                <TextView
                    android:id="@+id/tv_number_myorderfragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:textSize="14dp"
                    android:text="x1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"
        android:layout_marginTop="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv_shopNumber_MyOrderFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#666666"
            android:textSize="13dp"
            android:text="共 1 件商品"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="13dp"
            android:text="应付总额:"/>
        <TextView
            android:id="@+id/tv_TotalPrice_MyOrderFragment"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="#EA3C3C"
            android:text="1299.90"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_state_MyOrderFragment"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="wrap_content">
        <TextView
            android:text="订单状态："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="已付款"
            android:id="@+id/tv_orderzhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_right_MyOrderFragment"
            android:layout_marginLeft="15dp"
            android:background="@drawable/tv_bag4dp_red1"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="立即付款"
            android:textSize="14dp"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>